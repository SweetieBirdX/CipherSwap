{
  "version": 2,

  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": { "maxDuration": 30 }          
    }
  ],

  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.ts" },
    { "handle": "filesystem" },              
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ]
}
